{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "watch": true
    },
   "exclude": [
     "node_modules",
     "typings/browser.d.ts",
     "typings/browser"
    ],
    "filesGlob": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "!./node_modules/**/*.ts",
        "./typings/**/*.d.ts"
    ],
    "compileOnSave": true
}